{
  "manifest_version": 2,
  "name": "Steelseries YouTube  Addon",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "https://music.youtube.com/*"
      ],
      "js": [
        "splashScreenData.js",
        "addonData.js",
        "engineEvents.js",
        "engineUtils.js",
        "canvas.js",
        "siteScrapper.js",
        "addonEngine.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "permissions" : [
    "storage",
    "declarativeContent"
  ]
}

